# Development Environment Variables
# Copy this to .env.development.local and fill in your values

# Convex Development
VITE_CONVEX_URL=https://your-dev-deployment.convex.cloud
CONVEX_DEPLOYMENT=dev:your-dev-deployment
CONVEX_DEPLOY_KEY=dev:your-dev-deployment|YOUR_DEV_DEPLOY_KEY

# Clerk Development (Test Mode)
VITE_CLERK_PUBLISHABLE_KEY=pk_test_YOUR_DEV_CLERK_PUBLISHABLE_KEY
CLERK_SECRET_KEY=sk_test_YOUR_DEV_CLERK_SECRET_KEY
CLERK_WEBHOOK_SECRET=whsec_YOUR_DEV_WEBHOOK_SECRET
CLERK_DOMAIN=https://your-dev-clerk.clerk.accounts.dev

# Resend (Same for both environments)
RESEND_API_KEY=re_YOUR_RESEND_API_KEY
RESEND_FROM_EMAIL=notifications@caddy.team
RESEND_REPLY_TO=support@caddy.team

# Optional Development Tools
VITE_DEBUG=true
VITE_ENABLE_DEVTOOLS=true
