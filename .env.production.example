# Production Environment Variables
# These should be set in Vercel/GitHub Secrets, not in files

# Convex Production
VITE_CONVEX_URL=https://your-prod-deployment.convex.cloud
CONVEX_DEPLOYMENT=prod:your-prod-deployment
CONVEX_DEPLOY_KEY=prod:your-prod-deployment|YOUR_PROD_DEPLOY_KEY

# Clerk Production (Live Mode)
VITE_CLERK_PUBLISHABLE_KEY=pk_live_YOUR_PROD_CLERK_PUBLISHABLE_KEY
CLERK_SECRET_KEY=sk_live_YOUR_PROD_CLERK_SECRET_KEY
CLERK_WEBHOOK_SECRET=whsec_YOUR_PROD_WEBHOOK_SECRET
CLERK_DOMAIN=https://clerk.caddy.team

# Resend (Same for both environments)
RESEND_API_KEY=re_YOUR_RESEND_API_KEY
RESEND_FROM_EMAIL=notifications@caddy.team
RESEND_REPLY_TO=support@caddy.team

# Production Settings
NODE_ENV=production
VITE_DEBUG=false
VITE_ENABLE_DEVTOOLS=false

# Optional Monitoring (Production Only) (future enhancement)
SENTRY_DSN=https://your-sentry-dsn
POSTHOG_API_KEY=your-posthog-key
POSTHOG_HOST=https://app.posthog.com
